<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_newsImage"
        android:layout_width="203dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView_author"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_newsImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="43dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2_date"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_author"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/textView_author"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3_title"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/imageView_newsImage"
        android:text="TextView" />
</RelativeLayout>